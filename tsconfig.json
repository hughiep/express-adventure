{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },

  "include": ["**/*"],
  "exclude": ["node_modules"]
}
