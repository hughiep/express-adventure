{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
